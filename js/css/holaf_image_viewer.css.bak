#holaf-viewer-panel .holaf-viewer-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
    overflow: hidden;
    color: var(--holaf-text-primary);
    background-color: var(--holaf-background-primary);
}

#holaf-viewer-panel .holaf-viewer-pane {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow: hidden;
}

/* Left Pane - Filters */
#holaf-viewer-left-pane {
    flex: 0 0 220px;
    padding: 10px;
    border-right: 1px solid var(--holaf-border-color);
    background-color: var(--holaf-background-secondary);
    overflow-y: auto;
}

.holaf-viewer-filter-group {
    margin-bottom: 20px;
}
.holaf-viewer-filter-group h4 {
    margin: 0 0 10px 0;
    color: var(--holaf-text-primary);
    border-bottom: 1px solid var(--holaf-border-color);
    padding-bottom: 5px;
    font-size: 14px;
}
.holaf-viewer-filter-list {
    display: flex;
    flex-direction: column;
    gap: 5px;
}
.holaf-viewer-filter-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    cursor: pointer;
    user-select: none;
}
.holaf-viewer-filter-item input[type="checkbox"] {
    accent-color: var(--holaf-accent-color);
    cursor: pointer;
}


/* Center Pane - Gallery */
#holaf-viewer-center-pane {
    flex: 1 1 auto;
    /* CORRECTION: Padding removed from here to allow zoom view to be borderless. */
    position: relative; 
}

#holaf-viewer-toolbar {
    padding: 0 10px 10px 10px;
    border-bottom: 1px solid var(--holaf-border-color);
    margin-bottom: 10px;
    flex-shrink: 0;
}

#holaf-viewer-gallery {
    flex-grow: 1;
    overflow-y: auto;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    gap: 4px;
    padding: 10px; /* CORRECTION: Padding moved here for the gallery view only. */
    box-sizing: border-box;
}

.holaf-viewer-message {
    width: 100%;
    text-align: center;
    color: var(--holaf-text-secondary);
    font-style: italic;
    padding: 20px;
}

/* Placeholder & Thumbnail Styling */
.holaf-viewer-thumbnail-placeholder {
    flex: 1 1 150px;
    max-width: 250px;
    position: relative;
    aspect-ratio: 1 / 1;
    cursor: pointer;
    border-radius: 4px;
    overflow: hidden;
    border: 2px solid transparent;
    transition: border-color 0.2s;
    background-color: var(--holaf-input-background);
}
.holaf-viewer-thumbnail-placeholder:hover {
    border-color: var(--holaf-accent-color);
}
.holaf-viewer-thumbnail-placeholder.active {
    border-color: var(--holaf-accent-color);
    box-shadow: 0 0 8px var(--holaf-accent-color);
}
.holaf-viewer-thumbnail-placeholder.error {
    background-color: #5a2d2d;
    color: #ff8f8f;
    font-weight: normal; /* Normal weight for the message */
    display: flex;
    flex-direction: column; /* Stack message and button */
    align-items: center;
    justify-content: center;
    padding: 8px;
    box-sizing: border-box;
}

.holaf-viewer-error-overlay {
    font-size: 11px;
    text-align: center;
    line-height: 1.2;
    margin-bottom: 8px;
    max-height: 100px; /* Limit message height */
    overflow-y: auto; /* Allow scrolling for long errors */
    word-break: break-word;
}

.holaf-viewer-retry-button {
    background-color: #ff8f8f;
    color: #5a2d2d;
    border: 1px solid #ffc2c2;
    border-radius: 3px;
    padding: 3px 8px;
    font-size: 12px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.2s;
}

.holaf-viewer-retry-button:hover {
    background-color: #ffffff;
}
